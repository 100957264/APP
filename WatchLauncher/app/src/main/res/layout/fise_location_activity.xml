<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/page_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/app_location"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/icon_contacts"></Button>

        <TextView
            android:id="@+id/ic_tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_contact"
            android:text="@string/app_location"
            android:textSize="@dimen/main_activity_text_size" />

    </LinearLayout>
</RelativeLayout>