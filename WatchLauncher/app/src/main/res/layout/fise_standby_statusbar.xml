<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sysiui_signal_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_sysiui_signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_signal_0" />

    <TextView
        android:id="@+id/tv_sysiui_signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4.0dip"
        android:layout_toRightOf="@id/iv_sysiui_signal"
        android:textColor="@android:color/white"
        android:textSize="9sp" />


    <ImageView
        android:id="@+id/iv_mobile_traffic_up"
        android:layout_width="3dp"
        android:layout_height="5dp"
        android:layout_alignBottom="@id/tv_sysiui_signal"
        android:layout_toRightOf="@id/tv_sysiui_signal"
        android:src="@drawable/ic_traffic_up"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_mobile_traffic_down"
        android:layout_width="3dp"
        android:layout_height="5dp"
        android:layout_alignBottom="@id/iv_mobile_traffic_up"
        android:layout_toRightOf="@id/iv_mobile_traffic_up"
        android:src="@drawable/ic_traffic_down"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_sysiui_volte_network_hd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4.0dip"
        android:visibility="gone"
        android:layout_toRightOf="@id/iv_mobile_traffic_down"
        android:src="@drawable/icon_network_hd" />

    <ImageView
        android:id="@+id/iv_sysiui_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_wifi_0" />
    <ImageView
        android:id="@+id/iv_sysiui_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_sysiui_wifi"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_clock_nav"
        android:visibility="gone"/>


    <ImageView
        android:id="@+id/iv_wifi_traffic_up"
        android:layout_width="3dp"
        android:layout_height="5dp"
        android:layout_alignBottom="@id/iv_sysiui_wifi"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@id/iv_sysiui_wifi"
        android:src="@drawable/ic_traffic_up"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_wifi_traffic_down"
        android:layout_width="3dp"
        android:layout_height="5dp"
        android:layout_alignBottom="@id/iv_wifi_traffic_up"
        android:layout_toRightOf="@id/iv_wifi_traffic_up"
        android:src="@drawable/ic_traffic_down"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_sysiui_battery_charging"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_battery_charging"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_sysiui_battery"
        android:layout_width="30dp"
        android:layout_height="22dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_sysiui_battery_charging"
        android:scaleType="fitXY"
        android:src="@drawable/battery" />

    <TextView
        android:id="@+id/tv_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="4.0px"
        android:layout_toLeftOf="@id/iv_sysiui_battery"
        android:textColor="@android:color/white"
        android:textSize="12.0sp" />

    <ImageView
        android:id="@+id/iv_sysiui_bluetooth"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_sysiui_battery"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_status_bluetooth"
        android:visibility="gone" />
</RelativeLayout>
