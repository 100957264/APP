<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/activity_fise_launcher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                tools:context="com.android.fisewatchlauncher.acty.FiseLauncherActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/inner_view_page"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/btn_back_to_standby"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:paddingLeft="12dp"
        android:paddingTop="24dp"
        android:src="@drawable/btn_back"
        android:visibility="gone"/>

    <com.android.fisewatchlauncher.widget.CirclePageIndicator
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10px"
        app:strokeColor="#4f4f4f"
        app:radius="5dp"
        android:paddingLeft="5dp"
        android:background="@android:color/transparent" />
</RelativeLayout>