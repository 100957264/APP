<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/page_root"
	android:descendantFocusability="blocksDescendants"
	android:clickable="true"
	android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  >
     <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
	   android:gravity="center"
      >  
		<Button
			android:id="@+id/app_gallery"
			android:layout_width="180dp"
			android:layout_height="180dp"
			android:background="@drawable/icon_album" >
		</Button>

		<TextView
			android:id="@+id/ic_tv_gallery"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/app_gallery"
			android:text="@string/app_gallery"
			android:textSize="@dimen/main_activity_text_size" />
     </LinearLayout>
</RelativeLayout>