<resources>

    <style name="chat_text_subhead_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/chat_text_title</item>
        <item name="android:textSize">@dimen/chat_text_subhead</item>
    </style>

    <style name="chat_text_body">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/chat_text_sub</item>
        <item name="android:textSize">@dimen/chat_text_body</item>
    </style>

    <style name="chat_text_read_status">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/chat_text_read_status_color</item>
        <item name="android:textSize">@dimen/chat_text_read_status_size</item>
